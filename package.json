    "test:system": "node --experimental-vm-modules node_modules/jest/bin/jest.js --selectProjects system --runInBand",
    "test:e2e": "node --experimental-vm-modules node_modules/jest/bin/jest.js --selectProjects e2e --runInBand",
    "test:all": "node --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand"
