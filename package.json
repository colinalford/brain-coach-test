{
  "name": "brain-coach",
  "version": "1.0.0",
  "description": "Second Brain system with Slack UI, Cloudflare Workers, and GitHub Actions",
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --selectProjects unit",
